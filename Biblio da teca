print('Cadastro da Biblioteca')

def cadastro_novo():
    nome = input("Digite seu nome: ")
    senha = input("Digite sua senha: ")
    print("Usuário cadastrado com sucesso")
    return nome, senha

usuarios = []

while True:
    novo_usuario = cadastro_novo()
    usuarios.append(novo_usuario)
    
    print("Se deseja adicionar um novo usuário digite 1")
    print("Se deseja sair digite 2")
    escolha = input("Digite sua escolha: ")
  
    if escolha == "1":
        continue
    elif escolha == "2":
        print("Cadastro finalizado. Usuários cadastrados:")
        for user in usuarios:
            print(f"Usuário: {user[0]}")
        break
    else:
        print("Opção inválida. Tente novamente.")

print("Login")
login = input("Digite o usuário: ")
senha = input("Digite sua senha: ")
